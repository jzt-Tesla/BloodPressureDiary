<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.asteromania.groehl.bloodpressurediary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MainViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.AddDataItemActivity"
            android:label="@string/activity_add_data_item"/>
        <activity android:name=".views.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.WelcomeScreenActivity"
            android:label="@string/activity_welcome"/>
        <activity android:name=".views.SettingsActivity"
            android:label="@string/activity_settings"/>
        <activity android:name=".views.InfoActivity"
            android:label="@string/activity_info"/>
        <activity android:name=".views.ExportActivity"
            android:label="@string/activity_export"/>
        <activity android:name=".views.ShowProgressionActivity"
            android:label="@string/activity_progression"/>
        <activity android:name=".views.AddDataItemChoserActivity"
            android:label="@string/activity_data_item_choser"/>
    </application>

</manifest>